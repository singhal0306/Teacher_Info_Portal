{{> header }}
<h2 class="text-xl text-center mt-5"> Update Teacher </h2>
<form action="/update?_method=PUT" method="post" class="flex flex-col gap-y-5 justify-center items-center w-full mt-5">
    <input type="text" name="id" class="w-1/3 border p-2 rounded-md outline-none" placeholder="Enter Teacher ID"
        autocomplete="off" />
    <input type="text" name="name" class="w-1/3 border p-2 rounded-md outline-none" placeholder="Enter Teacher Name"
            autocomplete="off" />
            <input type="number" name="age" class="w-1/3 border p-2 rounded-md outline-none" placeholder="Enter Teacher Age"
            autocomplete="off" />

            <input type="text" name="dept" class="w-1/3 border p-2 rounded-md outline-none" placeholder="Enter Teacher Dept"
            autocomplete="off" />

            <input type="text" name="position" class="w-1/3 border p-2 rounded-md outline-none" placeholder="Enter Teacher Position"
            autocomplete="off" />

            <input type="text" name="course" class="w-1/3 border p-2 rounded-md outline-none" placeholder="Enter Teacher Course"
            autocomplete="off" />
    <input type="submit" value="Update Teacher" class="bg-[#246A73]  hover:bg-[#368F8B] font-bold  text-white p-3 rounded-md cursor-pointer" />
</form>
{{> footer}}