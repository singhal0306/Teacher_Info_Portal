{{> header }}
<h2 class="text-xl text-center mt-5"> Search Teacher </h2>
<form action="/search" method="post"
    class="flex flex-col gap-y-5 justify-center items-center w-full mt-5">
    <input type="text" name="id" class="w-1/3 border p-2 rounded-md outline-none" placeholder="Enter Teacher ID"
        autocomplete="off" />
    <input type="submit" value="Search Teacher"
        class="bg-[#246A73]  hover:bg-[#368F8B] font-bold text-white p-3 rounded-md cursor-pointer" />
</form>
